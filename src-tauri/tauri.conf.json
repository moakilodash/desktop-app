{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "kaleidoswap",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.kaleidoswap.dev",
      "resources": [
        "../bin/rgb-lightning-node"
      ],
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": true,
        "fullscreen": false,
        "height": 800,
        "label": "main",
        "resizable": true,
        "title": "kaleidoswap",
        "visible": false,
        "width": 1200
      },
      {
        "decorations": false,
        "height": 600,
        "label": "splashscreen",
        "url": "splashscreen.html",
        "width": 500
      }
    ]
  }
}