{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "KaleidoSwap",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "readText": true,
        "writeText": true
      },
      "dialog": {
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true
      },
      "process": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/logo.icns",
        "icons/logo.ico",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/512x512.png"        
      ],
      "identifier": "com.kaleidoswap.dev",
      "resources": [
        "../bin/rgb-lightning-node"
      ],
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://raw.githubusercontent.com; connect-src 'self' http://localhost:* http://127.0.0.1:* https://* http://* ws://localhost:* wss://* ws://*;"
    },
    "windows": [
      {
        "center": true,
        "decorations": true,
        "focus": true,
        "fullscreen": false,
        "height": 800,
        "label": "main",
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "title": "KaleidoSwap",
        "visible": false,
        "width": 1200
      },
      {
        "alwaysOnTop": false,
        "center": true,
        "decorations": false,
        "focus": false,
        "height": 600,
        "label": "splashscreen",
        "skipTaskbar": true,
        "url": "splashscreen.html",
        "width": 600
      }
    ]
  }
}